        <script>
            var draw = document.getElementById("drawing_window");
            var ctx = draw.getContext("2d");
            ctx.beginPath();
            //arc(x, y, radius, startAngle, endAngle)
            ctx.arc(75, 125, 20, 0, 2*Math.PI);
            ctx.stroke(); ctx.closePath();
            ctx.beginPath(); ctx.arc(75, 125, 15, 0, 2*Math.PI); ctx.stroke(); ctx.closePath();
            ctx.beginPath(); ctx.arc(175, 125, 20, 0, 2*Math.PI); ctx.stroke(); ctx.closePath();
            ctx.beginPath(); ctx.arc(175, 125, 15, 0, 2*Math.PI); ctx.stroke(); ctx.closePath();
            ctx.beginPath(); ctx.arc(175, 125, 20, 0, 2*Math.PI); ctx.stroke(); ctx.closePath();
            
            ctx.beginPath(); ctx.rect(50, 50, 150, 50); ctx.stroke(); ctx.closePath();
            ctx.beginPath(); ctx.moveTo(200, 100); ctx.lineTo(270, 90); ctx.stroke(); ctx.closePath();
            
            //Functions and script for the second video player
            var demoVideo = document.getElementById("TiltedHeadshot2");
            
            function startVid() {
                //Play or Pause the video depending on it's current state.
                demoVideo.addEventListener("ended", dispStop);
                if (demoVideo.paused) {
                    document.getElementById('playStatus').innerHTML = "Playing Video...";
                    demoVideo.play();
                } else {
                    document.getElementById('playStatus').innerHTML = "Video Paused...";
                    demoVideo.pause();
                }
                
            }
            function bigVid() {
                demoVideo.style.cssText = "width: 90%; margin-left: 5%; margin-right: 5%;";   
                
            }
            function smallVid() {
                demoVideo.style.cssText = "width: 50%;margin-left: 25%; margin-right: 25%;";
                
            }
            function dispStop() {
                document.getElementById("playStatus").innerHTML = "Video Stopped.";
            }
                                        
        </script>
